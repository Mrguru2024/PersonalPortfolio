{
  "version": 2,
  "public": true,
  "outputDirectory": "dist",
  "functions": {
    "api/**/*.ts": {
      "runtime": "vercel-node@2.0.0",
      "includeFiles": [
        "server/**/*",
        "shared/**/*"
      ]
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index" },
    { "source": "/(.*)", "destination": "/" }
  ]
}