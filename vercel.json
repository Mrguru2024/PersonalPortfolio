{
  "version": 2,
  "public": true,
  "outputDirectory": "dist",
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.ts" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "builds": [
    { "src": "api/index.ts", "use": "@vercel/node", "config": { "includeFiles": ["server/**/*", "shared/**/*"] } },
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "dist", "buildCommand": "vite build" } }
  ]
}