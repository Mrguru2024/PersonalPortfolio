# Database connection string (Required for PostgreSQL database operations)
DATABASE_URL=postgresql://username:password@localhost:5432/database

# Session secret for Express session (Required for authentication)
SESSION_SECRET=your_session_secret_here

# GitHub OAuth credentials (Required for GitHub login)
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# GitHub personal access token (Required for fetching real-time skills data)
# Needs permissions: repo, user
GITHUB_TOKEN=your_github_token

# SendGrid API Key (Required for sending emails)
SENDGRID_API_KEY=your_sendgrid_api_key

# Frontend URL (For CORS and redirects in production)
FRONTEND_URL=https://your-domain.com

# Email configuration
FROM_EMAIL=your-email@example.com
CONTACT_EMAIL=contact@example.com

# GitHub username for skills data fetching
# Only needed if different from the account associated with GITHUB_TOKEN
GITHUB_USERNAME=YourGitHubUsername

# Optional: Set to 'true' to enable debug logging
DEBUG=false

# Vercel specific variables (automatically set by Vercel)
# VERCEL=1
# VERCEL_ENV=production|preview|development
# VERCEL_URL=project-name-xxxx.vercel.app