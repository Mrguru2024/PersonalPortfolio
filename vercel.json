{
  "buildCommand": "vite build",
  "outputDirectory": "dist",
  "builds": [
    { "src": "vite.config.ts", "use": "@vercel/static-build" },
    { "src": "api/**/*.ts", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}